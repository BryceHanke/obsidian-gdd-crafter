{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "es2018",
    "moduleResolution": "bundler",
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["DOM", "ESNext", "WebWorker"],
    "types": ["svelte", "node"],
    "skipLibCheck": true,
    "verbatimModuleSyntax": true
  },
  "include": ["**/*.ts", "**/*.js", "**/*.svelte"]
}